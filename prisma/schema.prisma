// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  platform = "debian-openssl-3.0.x"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Software {
  id              String             @id @default(uuid())
  softwareName    String
  group           String?
  version         String
  license         String
  currentLicense  String
  numberOfLicense Int
  installerPath   String
  note            String?
  rooms           SoftwaresOnRooms[]
  master          Master             @relation(fields: [masterId], references: [id])
  masterId        String
  semeter         Semester           @relation(fields: [semesterId], references: [id])
  semesterId      String
}

model Room {
  id         String             @id @default(uuid())
  roomNumber String
  softwares  SoftwaresOnRooms[]
  master     Master             @relation(fields: [masterId], references: [id])
  masterId   String
}

model Semester {
  id           String     @id @default(uuid())
  semesterName String
  isActive     Boolean
  software     Software[]
}

model Master {
  id         String     @id @default(uuid())
  masterName String
  rooms      Room[]
  software   Software[]
}

model SoftwaresOnRooms {
  softwareId String
  software   Software @relation(fields: [softwareId], references: [id], onDelete: Cascade)
  roomId     String
  room       Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@id([softwareId, roomId])
}
